<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.erpsystem_layout">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ERPSystem_Layout">


        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />
        <activity android:name=".ViewDistrict_RV"></activity>

        <activity android:name=".ViewPosition_RV" />
        <activity android:name=".ViewCountry_RV" />
        <activity android:name=".ViewThana_RV" />
        <activity android:name=".ViewStatus_RV"/>
        <activity android:name=".Member_Status_UpdateDelete"/>
        <activity android:name=".MemberCountryUpdateDelete"/>
        <activity android:name=".MemberDistrictUpdateDelete"/>
        <activity android:name=".MemberPositionUpdateDelete"/>
        <activity android:name=".Member_thana_Update_Delete"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>